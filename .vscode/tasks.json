{
    "version": "2.0.0",
    "tasks"  : 
    [
        {
            "label": "build release",
            "type": "shell",
            "command": "./build_windows_mingw.bat"
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "./build_windows_mingw.bat -debug",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative", "${workspaceRoot}/src"]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run_executable",
            "type": "shell",
            "command": "./umka_windows_mingw/umka.exe"
        }
    ]
}